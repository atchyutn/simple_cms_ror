<% if !flash[:notice].blank? %>
    <div class="notice">
        <%= flash[:notice] %>
    </div>
<% end %>

<%= link_to("<< Back to subjects list", {:action => 'index'}, :class => 'back-link') %>

<div class="subjects show">
    <h2>Show subjects</h2>

    <table summary="Subject detailed view">
        <tr>
            <th>Name</th>
            <td><%= @subject.name %></td>
        </tr>
        <tr>
            <th>Position</th>
            <td><%= @subject.position %></td>
        </tr>
        <tr>
            <th>Visible?</th>
            <td><%= @subject.visible ? 'Yes' : 'No' %></td>
        </tr>
        <tr>
            <th>Created</th>
            <td><%= @subject.created_at %></td>
        <tr>
    </table>
</div>
